{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "pipeline": {
    "db:push": {
      "cache": false
    },
    "lint": {},
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "dist/**/*.test.js"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^db:generate"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^db:generate"
      ]
    },
    "debug": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^db:generate"
      ]
    },
    "deploy": {
      "inputs": [
        "src/commands/slash/**",
        "src/deploy.ts"
      ]
    }
  }
}
